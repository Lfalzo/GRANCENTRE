<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:backgroundTint="@color/black"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/gclogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/gclogo"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/crest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/gclogo"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/gcrest"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/cena"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:layout_toRightOf="@id/gcrest"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cfinanzas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/crest"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tfinanzas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finanzas"
                android:layout_centerVertical="true"
                android:textSize="25dp" />
            <ImageButton
                android:id="@+id/gcfinanzas"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/finanzas"
                android:layout_toRightOf="@id/tfinanzas"
                android:layout_marginLeft="50dp"
                android:layout_marginVertical="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/chotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/cfinanzas"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/gchotel"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/hotel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles"
                android:layout_toRightOf="@id/gchotel"
                android:layout_centerVertical="true"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ccine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/chotel"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tcine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cartelera"
                android:layout_centerVertical="true"
                android:textSize="25dp"/>

            <ImageButton
                android:id="@+id/gccine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/tcine"
                android:background="@drawable/cine" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cparking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/ccine"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/gcparking"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/estacionamiento"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:layout_toRightOf="@id/gcparking"
                android:layout_centerVertical="true"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@+id/cparking"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/ttransporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporte"
                android:layout_centerVertical="true"
                android:textSize="25dp" />
            <ImageButton
                android:id="@+id/gctransporte"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/transporte"
                android:layout_toRightOf="@id/ttransporte"
                android:layout_marginLeft="50dp"
                android:layout_marginVertical="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/gcconfig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/configuracion"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:layout_below="@+id/gcconfig"
        android:layout_alignStart="@id/gcconfig"/>


</RelativeLayout>